<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhile"
    android:clickable="true"
    android:focusable="true"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/llToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:src="@drawable/icon_back"
            android:padding="16dp"
            android:id="@+id/imgMenu"
            android:layout_width="@dimen/img_width_width"
            android:layout_height="@dimen/img_width_width"
            />
        <TextView
            android:id="@+id/tvSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible"
            android:text="Profile"
            android:gravity="center"
            android:textColor="@color/colorWhile"
            android:textSize="@dimen/dp18"


            />
        <TextView
            android:gravity="center"
            android:text="Luu"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:textColor="@color/colorWhile"
            android:background="@color/colorPrimaryDark"

            />

    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cimgAvatar"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/dp16"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                >
                <TextView
                    android:paddingLeft="@dimen/dp16"
                    android:background="@color/colorWhileDark"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|left"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Ho ten"
                    android:textSize="@dimen/dp16"
                    />
                <EditText
                    android:text="Do Xuan Hien"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp16"
                    android:background="@drawable/hinh_chu_nhat_two"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"

                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorWhileDark"
                >
                <TextView
                    android:paddingLeft="@dimen/dp16"
                    android:background="@color/colorWhileDark"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|left"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Nam sinh"
                    android:textSize="@dimen/dp16"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/hinh_chu_nhat_two"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="22/01/1997"
                        android:textSize="@dimen/dp16"
                        android:gravity="center|left"
                        android:textColor="@color/colorBlack"
                        android:paddingLeft="@dimen/dp16"
                        />
                    <ImageView
                        android:background="@color/colorWhileDark"
                        android:layout_width="56dp"
                        android:layout_height="56dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"

                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorWhileDark"
                >
                <TextView
                    android:paddingLeft="@dimen/dp16"
                    android:background="@color/colorWhileDark"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|left"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Email"
                    android:textSize="@dimen/dp16"

                    />
                <TextView
                    android:gravity="center|left"
                    android:text="Hiendochelsea@gmail.com"
                    android:textSize="@dimen/dp16"
                    android:textColor="@color/colorBlack"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp16"
                    android:background="@drawable/hinh_chu_nhat_two"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorWhileDark"
                >
                <TextView
                    android:paddingLeft="@dimen/dp16"
                    android:background="@color/colorWhileDark"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|left"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="So dien thoai"
                    android:textSize="@dimen/dp16"
                    />
                <EditText
                    android:text="0987654321"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp16"
                    android:background="@drawable/hinh_chu_nhat_two"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"

                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorWhileDark"
                >
                <TextView
                    android:paddingLeft="@dimen/dp16"
                    android:background="@color/colorWhileDark"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|left"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Dia chi"
                    android:textSize="@dimen/dp16"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp16"
                    android:background="@drawable/hinh_chu_nhat_two"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"

                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorWhileDark"
                >
                <TextView
                    android:paddingLeft="@dimen/dp16"
                    android:background="@color/colorWhileDark"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|left"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Tag"
                    android:textSize="@dimen/dp16"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp16"
                    android:background="@drawable/hinh_chu_nhat_two"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                >
                <TextView
                    android:paddingLeft="@dimen/dp16"
                    android:background="@color/colorWhileDark"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|left"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Gioi thieu ban than"
                    android:textSize="@dimen/dp16"
                    />
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhileDark"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="5"
                    android:paddingLeft="@dimen/dp16"
                    android:background="@drawable/hinh_chu_nhat_two"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:paddingLeft="@dimen/dp16"
                    android:gravity="center|left"
                    android:textSize="@dimen/dp16"
                    android:layout_width="120dp"
                    android:layout_height="56dp"
                    android:text="Anh noi bat"
                    android:textColor="@color/colorBlack"
                    android:background="@color/colorWhileDark"

                    />

                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp16"
                    android:id="@+id/rcImv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

                <ImageView
                    android:id="@+id/imvAddImv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/colorPrimaryDark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvResetPassword"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center|left"
                    android:text="Thay doi mat khau"
                    android:textColor="@color/colorWhile"
                    android:textSize="@dimen/dp16" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



</LinearLayout>