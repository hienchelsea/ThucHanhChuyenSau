<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp16"
    android:id="@+id/llFull"
    android:background="@color/colorWhile"
    android:clickable="true"
    android:focusable="true"

    >
    <ImageView
        android:padding="50dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/icon_logo"
        android:scaleType="fitCenter"

        />
    <LinearLayout
        android:background="@drawable/hinh_chu_nhat_background"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:padding="@dimen/dp16"
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Nhap ten tai khoan"
            android:background="#00ffffff"
            android:inputType="textEmailAddress"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorWhile"
            ></LinearLayout>

        <EditText
            android:padding="@dimen/dp16"
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Nhap mau khau"
            android:background="#00ffffff"
            android:inputType="textPassword"

            />

    </LinearLayout>
    <Button
        android:id="@+id/btnLogin"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Dang nhap"
        android:textColor="@color/colorWhile"
        android:background="@drawable/hinh_chu_nhat_xanh"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/dp16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvRegistration"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Dang ki tai khoan moi"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/tvResetPass"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quen mat khau?"
            />
    </LinearLayout>


</LinearLayout>