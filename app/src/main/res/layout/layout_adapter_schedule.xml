<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/llHomeAdapter"
    android:clickable="true"
    android:focusable="true"

    >

    <LinearLayout
        android:padding="8dp"
        android:background="@color/colorWhileDark"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp16"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvPhotographer"
                    android:gravity="center|left"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Inno Photo"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp18"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="8dp"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Dia diem "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dp14"
                        />
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center|left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Hoc vien cong nghe buu chinh"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dp14"
                        android:id="@+id/tvLocation"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:layout_marginTop="8dp"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Gia"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dp14"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/dp16"
                        android:id="@+id/tvTotal"
                        android:layout_marginTop="8dp"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="200000"
                        android:textColor="@color/colorRed"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        ></LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Ngay book: "

                        />
                    <TextView
                        android:gravity="center|left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=" 22/01/1997"

                        />
                    <Button
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimaryDark"
                        android:text="Danh gia"
                        android:textColor="@color/colorWhile"
                        />
                    <Button
                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimaryDark"
                        android:text="Book tiep"
                        android:textColor="@color/colorWhile"
                        />

                </LinearLayout>

                <TextView
                    android:layout_marginTop="8dp"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Chup anh theo concept"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:layout_marginTop="8dp"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Danh gia"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=" 8.5"
                        android:textColor="@color/colorRed"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        ></LinearLayout>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Gia"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=" 500.000"
                        android:textSize="@dimen/dp16"
                        android:textColor="@color/colorRed"
                        android:layout_marginRight="@dimen/dp16"
                        />
                </LinearLayout>




            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    ></LinearLayout>
                <Button
                    android:id="@+id/btnBook"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:background="@drawable/hinh_chu_nhat_cam"
                    android:text="Xem chi tiet"
                    android:textColor="@color/colorWhile"
                    />

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>




</LinearLayout>