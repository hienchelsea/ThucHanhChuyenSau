<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhile"
    android:clickable="true"
    android:focusable="true"
    >
    <LinearLayout
        android:id="@+id/llToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/img_width_width"
            android:layout_height="@dimen/img_width_width"
            android:padding="16dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/tvSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Profile"
            android:textColor="@color/colorWhile"
            android:textSize="@dimen/dp18"
            android:visibility="visible"


            />

        <TextView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:gravity="center" />

    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Xac thuc thong tin"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dp16"
                />
            <LinearLayout
                android:padding="@dimen/dp16"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cimgAvatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp16"
                    android:src="@color/colorPrimary" />
                <LinearLayout
                    android:layout_marginTop="@dimen/dp16"
                    android:background="@color/colorWhileDark"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:paddingLeft="@dimen/dp16"
                        android:gravity="center|left"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Ho va ten"
                        android:textSize="@dimen/dp14"
                        android:textColor="@color/colorBlack"
                        />
                    <TextView
                        android:id="@+id/tvNamePhoto"
                        android:paddingLeft="@dimen/dp16"
                        android:background="@drawable/hinh_chu_nhat_two"
                        android:gravity="center|left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Do Duy Manh"
                        android:textSize="@dimen/dp14"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:paddingLeft="@dimen/dp16"
                        android:gravity="center|left"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Nam Sinh"
                        android:textSize="@dimen/dp14"
                        android:textColor="@color/colorBlack"
                        />
                    <TextView
                        android:id="@+id/tvBirth"
                        android:paddingLeft="@dimen/dp16"
                        android:gravity="center|left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="22/01/1997"
                        android:textSize="@dimen/dp14"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout
                    android:background="@color/colorWhileDark"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:paddingLeft="@dimen/dp16"
                        android:gravity="center|left"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Email"
                        android:textSize="@dimen/dp14"
                        android:textColor="@color/colorBlack"
                        />
                    <TextView
                        android:id="@+id/tvEmail"
                        android:paddingLeft="@dimen/dp16"
                        android:gravity="center|left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Hiendochelsea@gmail.com"
                        android:textSize="@dimen/dp14"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:paddingLeft="@dimen/dp16"
                        android:gravity="center|left"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="So dien thoai"
                        android:textSize="@dimen/dp14"
                        android:textColor="@color/colorBlack"
                        />
                    <TextView
                        android:id="@+id/tvNumber"
                        android:paddingLeft="@dimen/dp16"
                        android:gravity="center|left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0987654321"
                        android:textSize="@dimen/dp14"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout
                    android:background="@color/colorWhileDark"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:paddingLeft="@dimen/dp16"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Gioi thieu ban than"
                        android:textSize="@dimen/dp14"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/tvGioiThieu"
                    android:padding="@dimen/dp16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp14"
                    android:textColor="@color/colorBlack"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView

                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Anh noi bat"
                        android:textSize="@dimen/dp14"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcImv"
                    ></android.support.v7.widget.RecyclerView>
            </LinearLayout>


            <Button
                android:id="@+id/btnFinish"
                android:layout_margin="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/hinh_chu_nhat_xanh"
                android:text="Dang ki"
                android:textColor="@color/colorWhile"
                />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>