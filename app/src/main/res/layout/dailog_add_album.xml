<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp16"
    android:orientation="vertical"
    android:background="@drawable/hinh_chu_nhat_trang"
    android:layout_margin="8dp"
    >
    <LinearLayout
        android:padding="@dimen/dp16"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/hinh_chu_nhat_two"
        >
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Nhap ten album"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/dp14"
            android:textColor="@color/colorBlack"
            />
        <EditText
            android:id="@+id/edtDescription"
            android:layout_marginTop="@dimen/dp16"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Mo ta"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/dp14"
            android:textColor="@color/colorBlack"
            />
        <EditText
            android:id="@+id/edtTag"
            android:layout_marginTop="@dimen/dp16"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Tag"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/dp14"
            android:textColor="@color/colorBlack"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp16"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="right"
        >
        <Button
            android:id="@+id/btnOk"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/hinh_chu_nhat_cam"
            android:text="Ok"
            android:textColor="@color/colorWhile"
            android:layout_marginRight="@dimen/dp16"
            />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/hinh_chu_nhat_xanh"
            android:text="Huy"
            android:textColor="@color/colorWhile"
            />
    </LinearLayout>

</LinearLayout>