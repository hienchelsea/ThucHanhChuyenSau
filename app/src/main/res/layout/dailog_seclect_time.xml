<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhileDark"
    android:layout_margin="@dimen/dp16"
    android:padding="@dimen/dp16">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbtnFullTime"
            android:background="@drawable/hinh_chu_nhat_one"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Ca ngay (7h-22h)"></RadioButton>

        <RadioButton
            android:id="@+id/rbtnMorning"
            android:layout_marginTop="4dp"
            android:background="@drawable/hinh_chu_nhat_one"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Sang (7h-11h)"></RadioButton>

        <RadioButton
            android:id="@+id/rbtnAfternoon"
            android:layout_marginTop="4dp"
            android:background="@drawable/hinh_chu_nhat_one"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Chieu (13h-17h)"></RadioButton>

        <RadioButton
            android:id="@+id/rbtnNight"
            android:layout_marginTop="4dp"
            android:background="@drawable/hinh_chu_nhat_one"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Toi (19h-23h)"></RadioButton>
    </RadioGroup>

</LinearLayout>